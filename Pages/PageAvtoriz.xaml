<Page x:Class="Elbrus_region.Pages.PageAvtoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Elbrus_region.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="АВТОРИЗАЦИЯ" HorizontalAlignment="Center"/>
            <TextBlock Text="Введите логин:" HorizontalAlignment="Left"/>
            <TextBox Name="txtLogin"/>

            <TextBlock Text="Введите пароль:" HorizontalAlignment="Left"/>
            <TextBox Name="txtPassword"/>

            <TextBlock Name="textBlockCaptcha" />
            <TextBox Name="txtCaptcha"/>

            <StackPanel Orientation="Horizontal" Height="80" HorizontalAlignment="Center">
                <Button Name="btnEnter" Content="Войти" Click="btnEnter_Click"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
